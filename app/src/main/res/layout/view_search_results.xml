<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView
        android:id="@+id/text_awardee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/accent_red"
        android:textStyle="bold"
        android:padding="5dip"
        android:layout_alignParentTop="true"
        tools:text="Grimm Science" />

    <TextView
        android:id="@+id/text_amount"
        android:layout_below="@id/text_awardee"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_gold"
        android:textStyle="bold"
        android:padding="5dip"
        tools:text="$20,000"/>

    <TextView
        android:id="@+id/text_date"
        android:layout_below="@id/text_awardee"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:padding="5dip"
        tools:text="12/20/2014" />

    <TextView
        android:id="@+id/text_description"
        android:layout_below="@id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        tools:text="Spectral imaging device to see Vessen under low light conditions" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/soft_grey"
        android:layout_below="@id/text_description"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
